<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- HEADER -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#0B1220"
            android:radius="24dp"
            android:elevation="12dp"
            android:outlineSpotShadowColor="#00D9FF"
            android:outlineAmbientShadowColor="#00AEEF"
            android:foreground="?attr/selectableItemBackground"
            android:padding="4dp"
            android:clipToOutline="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/rocketImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/cohete"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mision_gravedad"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#00D9FF"
                    android:letterSpacing="0.1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detector_de_acelerometro"
                    android:textSize="14sp"
                    android:textColor="#A0A0B0"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SENSORES DISPONIBLES -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#2C2C2C"
            android:radius="18dp"
            android:elevation="6dp"
            android:outlineSpotShadowColor="#9E9E9E"
            android:outlineAmbientShadowColor="#616161"
            android:strokeColor="#BDBDBD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sensores_disponibles"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#00D9FF"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/sensoresDisponibles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cargando..."
                    android:textSize="16sp"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ACELERÃ“METRO -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#0B1220"
            android:radius="24dp"
            android:elevation="12dp"
            android:outlineSpotShadowColor="#00D9FF"
            android:outlineAmbientShadowColor="#00AEEF"
            android:foreground="?attr/selectableItemBackground"
            android:padding="4dp"
            android:clipToOutline="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/coordenadas"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#00D9FF"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/coord_background"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/eje_x"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FF6B6B" />

                    <TextView
                        android:id="@+id/xcoor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:fontFamily="monospace" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/coord_background"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/eje_y"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#51CF66" />

                    <TextView
                        android:id="@+id/ycoor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:fontFamily="monospace" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/coord_background"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/eje_z"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#4DABF7" />

                    <TextView
                        android:id="@+id/zcoor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:fontFamily="monospace" />
                </LinearLayout>

                <TextView
                    android:id="@+id/estado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/iniciando"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:textColor="#E0E0E0"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/estado_background"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/precision"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/calculando"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/precision_background"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- GIROSCOPIO -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#1C1027"
            android:radius="30dp"
            android:elevation="10dp"
            android:outlineSpotShadowColor="#A78BFA"
            android:outlineAmbientShadowColor="#6E56CF"
            android:strokeColor="#C4A0FF"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:clipToOutline="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giroscopio (rad/s)"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#A78BFA"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/xgiro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X: 0.00"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/ygiro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Y: 0.00"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/zgiro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Z: 0.00"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/estadoGiro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/iniciando"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:textColor="#E0E0E0"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/estado_background"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/precisionGiro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/calculando"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/precision_background"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- MAGNETÃ“METRO -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:elevation="14dp"
            android:radius="26dp"
            android:clipToOutline="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:background="@drawable/bg_magnetometro_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MagnetÃ³metro (ÂµT)"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="16dp" />

                <ProgressBar
                    android:id="@+id/magBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:max="200"
                    android:progress="0"
                    android:progressTint="#00BCD4"
                    android:backgroundTint="#303042"
                    android:layout_marginBottom="8dp"
                    android:indeterminate="false" />

                <TextView
                    android:id="@+id/magValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Campo: 0.00 ÂµT"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/estadoMag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/iniciando"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:textColor="#E0E0E0"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/estado_background"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/precisionMag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/calculando"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/precision_background"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
